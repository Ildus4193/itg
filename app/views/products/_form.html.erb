<%= form_for(@product, :html => { :multipart => true }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :article %><br />
    <%= f.text_field :article %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :series %><br />
    <%= f.text_field :series %>
  </div>
  <div class="field">
    <%= f.label :presence %><br />
    <%= f.text_field :presence %>
  </div>
  <div class="field">
    <%= f.label :lgth %><br />
    <%= f.text_field :lgth %>
  </div>
  <div class="field">
    <%= f.label :dpth %><br />
    <%= f.text_field :dpth %>
  </div>
  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :catalog_mebeli_id %><br />
    <%= f.text_field :catalog_mebeli_id %>
  </div>
  <div class="field">
    <%= f.label :style_m_id %><br />
    <%= f.text_field :style_m_id %>
  </div>
  <div class="field">
    <%= image_tag(@product.avatar.url(:thumb), :class => "round")  if @product.avatar_file_name.present?  %><br /> 
    <%= f.label :avatar, "Изображение" %><br />  
    <%= f.file_field :avatar %>
  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
